<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>

<AnchorPane fx:id="signupForm" prefHeight="466.0" prefWidth="331.0" styleClass="form" stylesheets="@../../css/login.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignupFormController">
    <children>
        <VBox alignment="CENTER" layoutX="63.0" layoutY="80.0" spacing="30.0">
            <children>
                <HBox alignment="CENTER">
                    <children>
                        <JFXTextField fx:id="name" focusColor="#ec892f" labelFloat="true" onKeyReleased="#ValidateFields" prefHeight="30.0" prefWidth="207.0" promptText="Name">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </JFXTextField>
                        <FontIcon fx:id="nameCheck" fill="#36e817" iconLiteral="mdi-check" iconSize="18" selectionFill="#00ff5e" strokeType="OUTSIDE" strokeWidth="0.0" visible="false">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </FontIcon>
                    </children>
                </HBox>
                <HBox alignment="CENTER">
                    <children>
                        <JFXTextField fx:id="email" focusColor="#ec892f" labelFloat="true" onKeyReleased="#ValidateFields" prefHeight="30.0" prefWidth="207.0" promptText="Email">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </JFXTextField>
                        <FontIcon fx:id="emailCheck" fill="#36e817" iconLiteral="mdi-check" iconSize="18" selectionFill="#00ff5e" strokeType="OUTSIDE" strokeWidth="0.0" visible="false">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </FontIcon>
                    </children>
                </HBox>
                <HBox alignment="CENTER">
                    <children>
                        <JFXPasswordField fx:id="password" focusColor="#ec892f" labelFloat="true" onKeyReleased="#ValidateFields" prefHeight="30.0" prefWidth="207.0" promptText="Password">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </JFXPasswordField>
                        <FontIcon fx:id="passwordCheck" fill="#36e817" iconLiteral="mdi-check" iconSize="18" selectionFill="#00ff5e" strokeType="OUTSIDE" strokeWidth="0.0" visible="false">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </FontIcon>
                    </children>
                </HBox>
                <HBox alignment="CENTER">
                    <children>
                        <JFXPasswordField fx:id="repeatPassword" focusColor="#ec892f" labelFloat="true" onKeyReleased="#ValidateFields" prefHeight="30.0" prefWidth="207.0" promptText="Repeat password">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </JFXPasswordField>
                        <FontIcon fx:id="repeatPasswordCheck" fill="#36e817" iconLiteral="mdi-check" iconSize="18" selectionFill="#00ff5e" strokeType="OUTSIDE" strokeWidth="0.0" visible="false">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </FontIcon>
                    </children>
                </HBox>
            </children>
        </VBox>
        <JFXButton fx:id="signup" defaultButton="true" layoutX="99.0" layoutY="326.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="153.0" ripplerFill="#febb6c" style="-fx-text-fill: white;" styleClass="form-button" text="Sign up" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Arial Bold" size="13.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </JFXButton>
        <HBox alignment="CENTER" layoutX="97.0" layoutY="384.0" spacing="2.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account?" />
                <Text fx:id="login" fill="#ec892f" onMouseClicked="#switchToLogin" strokeType="OUTSIDE" strokeWidth="0.0" text="Login" underline="true">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Text>
            </children>
        </HBox>
    </children>
    <effect>
        <DropShadow height="12.0" radius="5.5" width="12.0">
            <color>
                <Color red="0.3034000098705292" green="0.6736299991607666" blue="0.8199999928474426" opacity="0.643478274345398" />
            </color>
        </DropShadow>
    </effect>
</AnchorPane>
